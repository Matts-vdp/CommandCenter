<Window x:Class="CommandCenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="My Overlay" Height="200" Width="200"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">
    <StackPanel HorizontalAlignment="Left" Width="auto">
        <Border Height="20" Width="auto" Background="Black" Opacity="0.3" Margin="0 5" />
        
        <StackPanel Orientation="Horizontal" Width="auto" Margin="0 5">
            <Button Width="25" x:Name="Foundation" Click="Service_OnClick">1</Button>
            <Label Foreground="White">Foundation</Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Width="auto" Margin="0 5">
            <Button Width="25" x:Name="Fusion" Click="Service_OnClick">2</Button>
            <Label Foreground="White">Fusion</Label>
        </StackPanel>
    </StackPanel>
</Window>