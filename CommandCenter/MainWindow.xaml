<Window x:Class="CommandCenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="My Overlay" Height="200" Width="200"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">
    <StackPanel HorizontalAlignment="Left" Width="auto">
    <Border Height="20" Width="auto" Background="Black" Opacity="0.3" Margin="0 5" />
    <StackPanel Orientation="Horizontal" Width="auto" Margin="0 5">
        <Button Width="25" x:Name="Test" Click="Test_OnClick" />
        <Label Foreground="White">ServiceName</Label>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Width="auto" Margin="0 5">
        <Button Width="25" x:Name="Test2" Click="Test2_OnClick"/>
        <Label Foreground="White">ServiceName2</Label>
    </StackPanel>
    </StackPanel>
</Window>